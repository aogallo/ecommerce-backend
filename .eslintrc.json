{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "import",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true,
      "alias": {
        "extensions": [
          ".js",
          ".ts"
        ],
        "map": [
          [
            "@resolvers",
            "./src/resolvers"
          ],
          [
            "@graphqlTypes",
            "./src/graphqlTypes"
          ]
        ]
      }
    }
  }
}
