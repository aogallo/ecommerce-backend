{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "import",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "*.graphql"
      ],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": [
        "@graphql-eslint"
      ],
      "rules": {
        "@graphql-elsint/known-type-names": "error"
      },
      "parserOptions": {
        "schema": "./src/graphqlTypes/**/*.graphql"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true,
      "alias": {
        "extensions": [
          ".js",
          ".ts"
        ],
        "map": [
          [
            "@resolvers",
            "./src/resolvers"
          ],
          [
            "@permissions",
            "./src/permissions"
          ],
          [
            "@entities",
            "./src/entities"
          ],
          [
            "@src",
            "./src"
          ],
          [
            "@tests",
            "./tests"
          ]
        ]
      }
    }
  }
}
